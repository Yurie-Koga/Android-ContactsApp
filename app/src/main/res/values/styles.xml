<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ContactDetail ImageView -->
    <style name="detail_cardview_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/detail_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/detail_margin_vertical</item>
    </style>

    <!-- ContactDetail Main info -->
    <style name="detail_main_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/detail_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/detail_margin_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- ContactDetail Sub info -->
    <style name="detail_sub_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/detail_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/detail_margin_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/contact_sub_info</item>
    </style>

</resources>